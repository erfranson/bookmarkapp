<div align="center">
  <h1>All Blocmarks</h1>
</div>
<div align="center">
  <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
</div>
<div class="row">
  <div class="col-md-12" align="center">
    <% @topics.each do |topic| %>
    <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic_path(topic.id) %>
            <%= link_to "Delete", topic_path(topic, topic.id), method: :delete, class: 'glyphicon', data: {confirm: 'Are you sure you want to delete this topic?'} %>
            <% end %>
          </h4>
        </div>
      </div>
  </div>
 </div>
