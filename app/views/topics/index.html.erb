<h1>All Topics</h1>
<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
    <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.title, topic_path(topic.id) %>
            <% end %>
          </h4>
        </div>
      </div>
  </div>
 </div>
